# Configuration de la base de données unifiée
# Copiez ce fichier vers .env et modifiez selon vos besoins

# Nom de la base de données (par défaut: trading_app.sqlite3)
DB_NAME=trading_app.sqlite3

# Pour différents environnements, vous pouvez utiliser:
# DB_NAME=trading_app_dev.sqlite3    # Développement
# DB_NAME=trading_app_test.sqlite3   # Test
# DB_NAME=trading_app_prod.sqlite3   # Production

# Configuration Django
DJANGO_SECRET_KEY=your-secret-key-here
DEBUG=False

# Hosts autorisés (séparés par des virgules)
ALLOWED_HOSTS=127.0.0.1,localhost,yourdomain.com

# Configuration email (optionnel)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@yourdomain.com

# Configuration Redis (optionnel)
REDIS_URL=redis://127.0.0.1:6379/1

# CORS (optionnel)
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com
